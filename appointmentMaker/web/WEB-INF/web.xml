<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>login.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>verifyotp</servlet-name>
        <servlet-class>login.verifyotp</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signinbygoogle</servlet-name>
        <servlet-class>login.signinbygoogle</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateslots</servlet-name>
        <servlet-class>actioncontrol.updateslots</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createevent</servlet-name>
        <servlet-class>actioncontrol.createevent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>verifyotp</servlet-name>
        <url-pattern>/verifyotp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signinbygoogle</servlet-name>
        <url-pattern>/signinbygoogle</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateslots</servlet-name>
        <url-pattern>/updateslots</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createevent</servlet-name>
        <url-pattern>/createevent</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
